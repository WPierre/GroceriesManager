{% set active_tab = 'categories' %}
{% extends 'WPierreGroceriesManagerBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Category list</h1>

    <table class="records_list table table-stripped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td><a href="{{ path('category_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td><a href="{{ path('category_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil"></span> Renommer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a href="{{ path('category_new') }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-plus-sign"></span> Nouvelle cat&eacute;gorie</a>
    {% endblock %}
